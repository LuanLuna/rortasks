<h1>Listing Leads</h1>

<% @leads.each do |lead| %>
  <div class="w3-container w3-content">
      <div class="w3-panel w3-white w3-card-2 w3-display-container">
                  <p><%= lead.code %></p>
                  <p><%= lead.owner %></p>
                  <p><%= lead.firstname %></p>
                  <p><%= lead.lastname %></p>
                  <p><%= lead.company %></p>
                  <p><%= lead.title %></p>
                  <p><%= lead.status %></p>
                  <p><%= lead.phone %></p>
                  <p><%= lead.email %></p>
                  <p><%= lead.street %></p>
                  <p><%= lead.city %></p>
                  <p><%= lead.state %></p>
                  <p><%= lead.zipcode %></p>
                  <p><%= lead.county %></p>
                  <p><%= lead.website %></p>
                  <p><%= lead.numberofemployees %></p>
                  <p><%= lead.annualrevenue %></p>
                  <p><%= lead.source %></p>
                  <p><%= lead.industry %></p>
                  <p><%= lead.description %></p>
                <a><%= link_to 'Show', lead %></a>
        <a><%= link_to 'Edit', edit_lead_path(lead) %></a>
        <a><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></a>
      </div>
    </div>
  </tr>
<% end %>

