<h1>Listing Quizzes</h1>

<% @quizzes.each do |quiz| %>
  <div class="w3-container w3-content">
      <div class="w3-panel w3-white w3-card-2 w3-display-container">
                  <p><%= quiz.code %></p>
                  <p><%= quiz.name %></p>
                  <p><%= quiz.description %></p>
                  <p><%= quiz.displaydescription %></p>
                  <p><%= quiz.open %></p>
                  <p><%= quiz.close %></p>
                  <p><%= quiz.timelimit %></p>
                  <p><%= quiz.whentimeexpires %></p>
                  <p><%= quiz.submissiongraceperiod %></p>
                  <p><%= quiz.gradecategory %></p>
                  <p><%= quiz.attemptsallowed %></p>
                  <p><%= quiz.gradingmethod %></p>
                <a><%= link_to 'Show', quiz %></a>
        <a><%= link_to 'Edit', edit_quiz_path(quiz) %></a>
        <a><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></a>
      </div>
    </div>
  </tr>
<% end %>

